generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  builds        Build[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Class {
  id          String  @id @default(cuid())
  name        String
  stats       Json
  image       String
  specs       Spec[]
  builds      Build[]
  metaBuilds  metaBuild[]
}

model Spec {
  id          String  @id @default(cuid())
  name        String
  stats       String
  classId     String
  image       String
  class       Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  weapons     Weapon[] @relation(name: "specweapons")
  builds      Build[]
  primaryWeapon Weapon?
}

model Weapon {
  id          String  @id @default(cuid())
  name        String
  stats       Json
  description String
  image       String
  specs       Spec[] @relation(name: "specweapons")
  buildweapons BuildWeapon[]
  overclocks   Overclock[]
  primarySpecId String? @unique
  primarySpec Spec? @relation(fields: [primarySpecId], references: [id])
}

model Overclock {
  id          String  @id @default(cuid())
  name        String
  description String
  image       String
  weapons     Weapon[]
  buildweaponoverclocks BuildWeaponOverclock[]
}

model Build {
  id          String  @id @default(cuid())
  name        String
  description String
  image       String
  specId      String
  classId    String
  spec        Spec @relation(fields: [specId], references: [id], onDelete: Cascade)
  user        User @relation(fields: [userId], references: [id])
  class       Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  saves       Int
  weapons     BuildWeapon[]
  metaBuilds  metaBuild[]
}

model BuildWeapon {
  id          String  @id @default(cuid())
  buildId     String
  weaponId    String
  build       Build @relation(fields: [buildId], references: [id], onDelete: Cascade)
  weapon      Weapon @relation(fields: [weaponId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  overclocks  BuildWeaponOverclock[]
}

model BuildWeaponOverclock {
  id          String  @id @default(cuid())
  buildWeaponId String
  overclockId   String
  buildWeapon   BuildWeapon @relation(fields: [buildWeaponId], references: [id], onDelete: Cascade)
  overclock     Overclock @relation(fields: [overclockId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model metaBuild {
  id          String  @id @default(cuid())
  position    Int
  buildId     String
  classId     String
  class       Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  build       Build @relation(fields: [buildId], references: [id], onDelete: Cascade)
}